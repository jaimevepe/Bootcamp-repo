
<%- include('partials/header')%>

        <h1 class="text-center">Find the lyrics to your favorite songs!</h1>

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4">
                        <form action='/lyricsResults'>
                            <div class="form-group">
                                <label for="artist">Enter Artist:</label>
                                <input type="text" class="form-control" name='artist' id="artist" placeholder="Enter artist name here">
                            </div>
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" name='title' id="title" placeholder="Enter title of song here">
                            </div>
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </form>
                </div>
                
                <div class="col-lg-8">
                    <div class="col-lg-8">
                        <div id='resultsBox'>
                            <h3 class='text-center'>Lyric Results:</h3>
                            <p id='displayLyrics'></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>     
        
        <%- include('partials/footer') %>